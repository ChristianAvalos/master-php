</pre>

{{animales[1]}}

{# trabajar con arrays asociativos #}
<pre>
    {{ dump(aves) }}
</pre>


{{aves.tipo ~ ' - ' ~ aves.raza}}

{# condicional #}
{% if aves.tipo == 'palomo' %}
    <h1>Cuidado un palomo volador</h1>
{% else %}
    <h2>No hay palomos a la vista</h2>
{% endif %}

{# bucle #}
    {% if animales|length >= 0 %}
        <ul>
            {% for animal in animales %}
                <li>
                    {{animal}}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% for i in 0..10 %}
        {{i}}<br/>
    {% endfor %}

    {% if aves.color ends with 's' %}
        <h1>Empieza con G</h1>

    {% endif %}
    <hr/>
